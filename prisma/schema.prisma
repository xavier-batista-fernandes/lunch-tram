generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Lunch {
  id           String        @id @default(uuid())
  name         String
  date         DateTime      @default(now())
  participants Participant[] @relation("LunchToParticipant")
}

model Participant {
  id     String  @id @default(uuid())
  name   String  @unique
  lunchs Lunch[] @relation("LunchToParticipant")
}

